rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // User images (avatars, post images)
    match /user-uploads/{uid}/{allPaths=**} {
      allow read: if request.auth != null;           // or make this true if you want public images
      allow write: if request.auth != null
                   && request.auth.uid == uid
                   && request.resource.size < 5 * 1024 * 1024            // < 5 MB
                   && request.resource.contentType.matches('image/.*');  // images only
    }

    // Optional public folder if you want some assets wide open
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
